<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#070707"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome To E-Book"
        android:textColor="#EF79F8"
        android:textSize="35dp"
        android:paddingLeft="33dp"
        android:paddingTop="30dp"
        android:textStyle="bold"
         />
    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="30dp"
        app:srcCompat="@drawable/eebook" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We Provide E-Book Of The Text-Book For Free Of Cost!"
        android:textColor="#D62764"
        android:textSize="29dp"
        android:paddingLeft="28dp"
        android:paddingTop="22dp"

        android:textStyle="bold"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="login"
        android:layout_margin="8dp"
        android:layout_gravity="center"
        android:background="#1D6DBD"
        android:textSize="30dp"
        android:textStyle="bold"



        ></androidx.appcompat.widget.AppCompatButton>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/design_default_color_error"
        android:layout_marginTop="30dp" />

    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up If You are New User"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_marginTop="28dp"
        android:paddingTop="0dp"/>


</LinearLayout>